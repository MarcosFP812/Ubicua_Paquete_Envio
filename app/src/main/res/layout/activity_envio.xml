<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnvioActivity">

    <ImageView
        android:id="@+id/sm"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/smartpacket" />

    <ImageView
        android:id="@+id/menu"
        android:layout_width="54dp"
        android:layout_height="39dp"
        android:layout_marginTop="24dp"
        android:scaleType="centerCrop"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menu" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/inter"
        android:text="Envío"
        android:textColor="#01A0E1"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/sm" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="92dp"
        android:layout_height="0dp"
        android:layout_marginBottom="604dp"
        android:fontFamily="@font/niramit"
        android:text="Receptor"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


    <TextView
        android:id="@+id/txt1"
        android:layout_width="115dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/niramit"
        android:text="Transportistas"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3" />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="135dp"
        android:layout_height="0dp"
        android:fontFamily="@font/niramit"
        android:text="Temperatura(ºC)"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView" />

    <TextView
        android:id="@+id/txt3"
        android:layout_width="85dp"
        android:layout_height="25dp"
        android:layout_marginHorizontal="130dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/niramit"
        android:text="Humedad"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt2"
        app:layout_constraintTop_toBottomOf="@+id/scrollView" />

    <TextView
        android:id="@+id/txt4"
        android:layout_width="135dp"
        android:layout_height="0dp"
        android:fontFamily="@font/niramit"
        android:text="Dirección"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/miEditText" />

    <TextView
        android:id="@+id/txt5"
        android:layout_width="135dp"
        android:layout_height="0dp"
        android:fontFamily="@font/niramit"
        android:text="Fecha entrega"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/miEditText2" />

    <TextView
        android:id="@+id/txt6"
        android:layout_width="135dp"
        android:layout_height="0dp"
        android:fontFamily="@font/niramit"
        android:text="ID"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/miEditText3" />


    <EditText
        android:id="@+id/miEditText"
        android:layout_width="135dp"
        android:layout_height="60dp"
        android:gravity="left"
        android:imeOptions="actionDone"
        android:inputType="numberDecimal"
        android:maxLength="50"
        android:padding="16dp"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.079"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt2" />

    <EditText
        android:id="@+id/miEditText1"
        android:layout_width="85dp"
        android:layout_height="60dp"
        android:layout_marginTop="4dp"
        android:gravity="left"
        android:imeOptions="actionDone"
        android:inputType="numberDecimal"
        android:maxLength="50"
        android:padding="16dp"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.616"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt3" />

    <EditText
        android:id="@+id/miEditText2"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:gravity="left"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:maxLength="50"
        android:padding="16dp"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.271"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt4" />

    <EditText
        android:id="@+id/miEditText3"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:gravity="left"
        android:imeOptions="actionDone"
        android:inputType="date"
        android:maxLength="50"
        android:padding="16dp"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.271"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt5" />
    <EditText
        android:id="@+id/miEditText4"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:gravity="left"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:maxLength="50"
        android:padding="16dp"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.271"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt6" />

    <ScrollView

        android:id="@+id/scrollView3"
        android:layout_width="364dp"
        android:layout_height="140dp"
        app:layout_constraintTop_toBottomOf="@+id/txt"
        tools:layout_editor_absoluteX="19dp">

        <TableLayout
            android:id="@+id/tabla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Fila 1 -->
            <TableRow android:layout_width="330dp">

                <TextView
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:background="#f0f0f0"
                    android:gravity="left"
                    android:padding="8dp"
                    android:text="Rec 1" />
            </TableRow>

            <!-- Fila 2 -->
            <TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#e0e0e0"
                    android:gravity="left"
                    android:padding="8dp"
                    android:text="Rec 2" />
            </TableRow>

            <!-- Fila 3 -->
            <TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f0f0f0"
                    android:gravity="left"
                    android:padding="8dp"
                    android:text="Rec 3" />
            </TableRow>

            <!-- Añade más filas según sea necesario -->

        </TableLayout>
    </ScrollView>

    <ScrollView

        android:id="@+id/scrollView"
        android:layout_width="364dp"
        android:layout_height="140dp"
        app:layout_constraintTop_toBottomOf="@+id/txt1"
        tools:layout_editor_absoluteX="19dp">

        <TableLayout
            android:id="@+id/tabla1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Fila 1 -->
            <TableRow android:layout_width="330dp">

                <TextView
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:background="#f0f0f0"
                    android:gravity="left"
                    android:padding="8dp"
                    android:text="Trans 1" />
            </TableRow>

            <!-- Fila 2 -->
            <TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#e0e0e0"
                    android:gravity="left"
                    android:padding="8dp"
                    android:text="Trans 2" />
            </TableRow>

            <!-- Fila 3 -->
            <TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f0f0f0"
                    android:gravity="left"
                    android:padding="8dp"
                    android:text="Trans 3" />
            </TableRow>

            <!-- Añade más filas según sea necesario -->

        </TableLayout>
    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>

