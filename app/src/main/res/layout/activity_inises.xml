<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/bv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bienvenido" />



    <ImageView
        android:id="@+id/reg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="168dp"
        android:padding="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/register" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="92dp"
        android:layout_height="0dp"
        android:layout_marginBottom="604dp"
        android:fontFamily="@font/niramit"
        android:text="Usuario"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/reg"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/miEditText"
        android:layout_width="294dp"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:gravity="left"
        android:imeOptions="actionDone"
        android:inputType="textPersonName"
        android:maxLength="50"
        android:padding="16dp"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.136"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt" />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="108dp"
        android:layout_height="46dp"
        android:fontFamily="@font/niramit"
        android:text="Contraseña"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintHorizontal_bias="0.096"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/miEditText" />

    <EditText
        android:id="@+id/miEditText2"
        android:layout_width="294dp"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:gravity="left"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:maxLength="50"
        android:padding="16dp"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.136"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt2" />



    <TextView
        android:id="@+id/clickableText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_margin="16dp"
        android:fontFamily="@font/inter"
        android:text="¿No estás registrado? Registrate"
        android:textColor="#01A0E1"
        android:textSize="16sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/miEditText2"
        app:layout_constraintVertical_chainStyle="packed" />


    <Button
        android:id="@+id/btn3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/botoni"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clickableText" />

</androidx.constraintlayout.widget.ConstraintLayout>
