<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/bv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bienvenido" />

    <ImageView
        android:id="@+id/reg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="168dp"
        android:padding="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/register" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="92dp"
        android:layout_height="0dp"
        android:layout_marginBottom="592dp"
        android:fontFamily="@font/niramit"
        android:text="Usuario"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/reg"
        app:layout_constraintHorizontal_bias="0.084"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/flecha"
        android:layout_width="56dp"
        android:layout_height="53dp"
        android:layout_marginTop="200dp"
        android:padding="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/flecha" />

    <EditText
        android:id="@+id/miEditText"
        android:layout_width="294dp"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:gravity="left"
        android:imeOptions="actionDone"
        android:inputType="textPersonName"
        android:maxLength="50"
        android:padding="16dp"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.136"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt" />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="108dp"
        android:layout_height="46dp"
        android:fontFamily="@font/niramit"
        android:text="Contraseña"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintHorizontal_bias="0.082"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/miEditText" />

    <EditText
        android:id="@+id/miEditText2"
        android:layout_width="294dp"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:gravity="left"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:maxLength="50"
        android:padding="16dp"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.136"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt2" />


    <TextView
        android:id="@+id/txt3"
        android:layout_width="108dp"
        android:layout_height="44dp"
        android:fontFamily="@font/niramit"
        android:text="¿Qué eres?"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintHorizontal_bias="0.082"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/miEditText2" />

    <TextView
        android:id="@+id/clickableText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="68dp"
        android:fontFamily="@font/inter"
        android:text="¿Ya tienes cuenta? Iniciar Sesión"
        android:textColor="#01A0E1"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/btnE"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/miEditText3" />

    <Button
        android:id="@+id/btnU"
        android:layout_width="125dp"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="#01A0E1"
        android:fontFamily="@font/niramit"
        android:padding="8dp"
        android:text="Usuario"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/btnE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt3" />

    <Button
        android:id="@+id/btnE"
        android:layout_width="125dp"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="#01A0E1"
        android:fontFamily="@font/niramit"
        android:padding="8dp"
        android:text="Empresa"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/btnU"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt3"
        android:layout_marginStart="8dp" />


    <TextView
        android:id="@+id/txt4"
        android:layout_width="108dp"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/niramit"
        android:text="Dirección"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintHorizontal_bias="0.095"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnU" />

    <EditText
        android:id="@+id/miEditText3"
        android:layout_width="294dp"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:layout_marginTop="12dp"
        android:gravity="left"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:maxLength="50"
        android:padding="16dp"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.239"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt4" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/botonr"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clickableText" />

</androidx.constraintlayout.widget.ConstraintLayout>
